@model Schedule_Planner.Models.ScheduleModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <input asp-for="StudentId" hidden/>
    <input asp-for="TeacherId" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-danger pl-3">Delete Scheduled Class</h2>
        </div>
        <div class="row">
            <div class="col-8 my-3">
                <div class="form-group row my-2">
                    <div class="col-4">
                        <label asp-for="SubjectName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SubjectName" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-4">
                        <label asp-for="TeacherName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TeacherName" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-4">
                        <label asp-for="DateTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DateTime" class="form-control" disabled/>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" style="border:3px solid #dc3545;" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-light w-100 ret-but">
                                Return &nbsp; <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial" />}
}