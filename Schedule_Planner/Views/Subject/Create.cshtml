@model Schedule_Planner.Models.SubjectSubmitModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Subject</h2>
        </div>
        <div class="row">
            <div class="col-8 my-3">
                <div class="form-group row my-2">
                    <div class="col-4">
                        <label asp-for="SubjectName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SubjectName" class="form-control"/>
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-4">
                        <label>Teacher</label>
                    </div>
                    <div class="col-8">
                        <a class="btn btn-light dropdown-toggle" style="width: 100%" href="#" role="button" id="TeacherListDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Select a teacher
                        </a>
                        <select name="TeacherId" asp-items="Model.TeachersIdsList" class="dropdown-menu" size="3" aria-labelledby="StudentsListDropdown" ></select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-4">
                        <label>Students</label>
                        @*<label asp-for="StudentsIds"></label>*@
                    </div>
                    <div class="col-8 dropdown">
                        <a class="btn btn-light dropdown-toggle" style="width: 100%" href="#" role="button" id="StudentsListDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Select student(s)
                        </a>
                        <select asp-for="SelectedStudentsIds" asp-items="Model.StudentsIdsList" class="dropdown-menu" size="3" aria-labelledby="StudentsListDropdown" ></select>
                        <span asp-validation-for="SelectedStudentsIds" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-light w-100">
                                Return &nbsp; <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial" />}
}