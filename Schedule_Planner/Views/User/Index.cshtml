@model IEnumerable<Schedule_Planner.Models.UserModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 nav-justified">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create new User
            </a>
        </div>
    </div>

    <br/><br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr class="align-middle">
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.Role</td>
                    @if (obj.Id.ToString() != User.FindFirst("Id").Value)
                    {
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Update" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                    <i class="fas fa-trash-alt"></i> &nbsp;
                                </a>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Update" class="btn btn-secondary" style="pointer-events: none;" >
                                    <i class="fas fa-edit"></i> &nbsp;
                                </a>
                                <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-secondary" style="pointer-events: none;" >
                                    <i class="fas fa-trash-alt"></i> &nbsp;
                                </a>
                            </div>
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
    }

</div>


