@model Schedule_Planner.Models.UserModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    var errorIncorrect = TempData["ErrorIncorrect"] as string;
    var errorNotFound = TempData["ErrorNotFound"] as string;
}
<div class="text-center">
    <form method="post" asp-action="Login">
        <div class="border p-3">
            <!-- 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
            -->
            <div class="form-group row">
                <h2 class="text-info pl-3">Login</h2>
                @if (!string.IsNullOrEmpty(errorNotFound))
                {
                    <h4 class="alert-danger" style="padding: 20px;">@errorNotFound</h4>
                }else if (!string.IsNullOrEmpty(errorIncorrect))
                {
                    <h4 class="alert-danger" style="padding: 20px;">@errorIncorrect</h4>
                }
            </div>
            <div class="row">
                <div class="col-12 my-3">
                    <div class="form-group row my-2">
                        <div class="col-4">
                            <label asp-for="UserName"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="UserName" class="form-control"/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-4">
                            <label asp-for="Password"></label>
                        </div>
                        <div class="col-8">
                            <input type="password" asp-for="Password" class="form-control"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row my-2">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Create"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial" />}
}