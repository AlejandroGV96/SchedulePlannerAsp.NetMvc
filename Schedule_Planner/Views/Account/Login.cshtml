@model Schedule_Planner.Models.UserModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    var errorIncorrect = TempData["ErrorIncorrect"] as string;
    var errorNotFound = TempData["ErrorNotFound"] as string;
}


<div class="container ins-body">

    <div class="row p-3" >
        <div class="login-left col-6">
           <img src="/media/images/login-image.png" alt="login-image" class="login-image"/>
        </div>
        


        <div class="login-right col-6" >



            <!-- Here is Form-->
            <div class="login-form">
                <form method="post" asp-action="Login">
                    <div class="p-0">
                        <!-- 
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
                        -->
                        <div class="form-group row">
                            <h3 class="fw-normal pb-1 login-title" style="color:black;text-align:left;">Log in</h3>
                            @if (!string.IsNullOrEmpty(errorNotFound))
                            {
                                <h4 class="alert-danger" style="padding: 20px;">@errorNotFound</h4>
                            }else if (!string.IsNullOrEmpty(errorIncorrect))
                            {
                                <h4 class="alert-danger" style="padding: 20px;">@errorIncorrect</h4>
                            }
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group my-2">
                                    @*<div class="col-4">
                                        <label asp-for="UserName"></label>
                                    </div>*@
                                    <div class="form-outline mb-4">
                                        <input asp-for="UserName" class="form-control form-control-lg" placeholder="Username"/>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group my-2">
                                    @*<div class="col-4">
                                        <label asp-for="Password"></label>
                                    </div>*@
                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Password"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group my-2" >
                                    <div class="pt-1 mb-4">
                                        <input type="submit" class="btn btn-primary btn-lg btn-block w-100 login-button"  value="Login"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <div class="text-muted login-footer">
         <div class="container-fluid">
                &copy; 2022 - Schedule Planner 
         </div>
    </div>
</div>




@section Scripts
{
    @{<partial name="_ValidationScriptsPartial" />}
}